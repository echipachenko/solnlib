{
  "devDependencies": {
    "ext-grunt-basebuild": "0.1.11"
  },
  "scripts": {
    "postinstall": "pip install -r requirements.txt -t pypi_modules -i http://repo.splunk.com/artifactory/api/pypi/pypi-virtual/simple",
    "build": "python setup.py sdist",
    "lint": "PYTHONPATH=./pypi_modules python setup.py lint | tee pylint.log",
    "test": "PYTHONPATH=./pypi_modules python setup.py test",
    "jtest": "PYTHONPATH=./pypi_modules python setup.py jtest",
    "int_test": "PYTHONPATH=./pypi_modules python examples/main.py",
    "cov": "PYTHONPATH=./pypi_modules python setup.py cov",
    "cov_html": "PYTHONPATH=./pypi_modules python setup.py cov_html",
    "docs": "cd docs; PYTHONPATH=../pypi_modules python auto_doc.py; PYTHONPATH=../pypi_modules make html",
    "clean": "rm -rf build dist docs/_build pypi_modules"
  }
}
